    <div class="form-check form-check-inline float-center">
      <input class="form-check-input" type="checkbox" id="checkbox2" value="perfil2">
      <label class="form-check-label" for="inlineCheckbox2">Refinado</label>
    </div>
    <div class="form-check form-check-inline float-center">
      <input class="form-check-input" type="checkbox" id="checkbox3" value="perfil3">
      <label class="form-check-label" for="inlineCheckbox3">Simples</label>
    </div>
    <div class="form-check form-check-inline float-center">
      <input class="form-check-input" type="checkbox" id="checkbox4" value="perfil4">
      <label class="form-check-label" for="inlineCheckbox3">Cult</label>
    </div>
    <div class="form-check form-check-inline float-center">
      <input class="form-check-input" type="checkbox" id="checkbox5" value="perfil5">
