<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<header class="login_page">
</header>
<form action="/new/pageF/{{client_id}}/{{budget_id}}" method="post" class="pagesFront">

  <!-- Bloco Traslado - início -->
  <div class="dinamic_spec">
    <h1> Traslado/carro </h1>


    <div>
      <h6>Responsável da viagem</h6>
      <input type="text" class="form-control" value="{{client.fullname}}" readonly>
      <br><br>
      <h6>Acompanhantes</h6>
      {{#each test2}}
        <input type="text" class="form-control" value="{{name}}" readonly>
        <br>
      {{/each}}
    </div>


      <div class="rowclass autorow">
        <div class="boxPageF boxPageF_Selected" id="box1">
          <div>
            <h3> Traslado 1</h3><br>
            <input name="car[from]" type="text" placeholder="De" class="date start-date" />
            <i class="fa fa-car" aria-hidden="true" style="margin-right: 4px; margin-left: 4px"></i>
            <input name="car[to]" type="text" placeholder="Para" class="date start-date" />
            <br><br>
            <input type="date" name = "car[dateFrom]" class="date start-date" id="dateFrom" placeholder="Data do traslado" maxlength='10' onblur='addDashesNascimento(this)'  onkeypress="return /\d/.test(String.fromCharCode(((event||window.event).which||(event||window.event).which)));">
            <i class="fa fa-calendar"></i>
            <input type="time" placeholder="00:00" name="car[timeFrom]" class="date start-date" style="width:200px"/>
            <br><br>
          </div>
          <h3>Informações/ Valores</h3><br>
          <div class="container rowclass classF-input">
            <table class="rowclass autorow">
              <thead>
                <tr>
                  <th colspan="2"><label>Valor por ADT</label></th>
                  <th colspan="2"><label>Valor por CHD</label></th>
                  <th colspan="2"><label>Valor por INF</label></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th colspan="2"><input name="car[valueADT]" onblur="calcTraslado()" id="valueADT1" class="form-control" placeholder="ADT" value="0"></th>
                  <th colspan="2"><input name="car[valueCHD]" onblur="calcTraslado()" id="valueCHD1" class="form-control" placeholder="CHD" value="0"></th>
                  <th colspan="2"><input name="car[valueINF]" onblur="calcTraslado()" id="valueINF1" class="form-control" placeholder="INF" value="0"></th>
                </tr>
                <tr>
                  <th colspan="2"><label>Número de ADT's</label></th>
                  <th colspan="2"><label>Número de CHD's</label></th>
                  <th colspan="2"><label>Número de INF's</label></th>
                </tr>
                <tr>
                  <th colspan="2"><input name="car[numADT]" onblur="calcTraslado()" id="numADT1" class="form-control" placeholder="numADT" value="0"></th>
                  <th colspan="2"><input name="car[numCHD]" onblur="calcTraslado()" id="numCHD1" class="form-control" placeholder="numCHD" value="0"></th>
                  <th colspan="2"><input name="car[numINF]" onblur="calcTraslado()" id="numINF1" class="form-control" placeholder="numINF" value="0"></th>
                </tr>
                <tr>
                  <th colspan="3">
                    <br>
                    <div class="rowclass autorow">
                      <select placeholder="Selecione" class="form-control" name=car[coinT] >
                        <option style="display:none">Moeda:</option>
                        <option>USD</option>
                        <option>R$</option>
                        <option>€</option>
                      </select>
                    </div>
                  </th>
                  <th colspan="3">
                    <br>
                    <input name="car[totalTranslado]" onblur="calcTraslado()" id="totalTranslado1" class="form-control" placeholder="Total" value="0">
                  </th>
                </tr>
              </tbody>
            </table>
            <br>
          </div>
        </div>
        <div class="rowclass" id="landing_Traslado">
        </div>
     </div>

    <button type="button" class="add_buttons" id="prev_traslado">Traslado anterior</button>
    <button type="button" class="add_buttons" id="add-traslado">+Traslados</button>
    <button type="button" class="add_buttons" id="nxt_traslado">Próximo Traslado</button>
  </div><br><br>
  <!-- Bloco Traslado - fim -->


  <!-- Bloco carros - início -->
  <div class="dinamic_spec">
      <div class="autorow">
        <div class="boxCarsPageF">
          <br><br><h3> Carros 1 </h3><br>
          <div class="classa">
            <input class="form-control" placeholder="Categoria" name="car[typeCar]" >
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Local de Retirada" name="car[withdrawal]" >
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Local de Devolução" name="car[delivery]" >
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Características" name="car[shift]" >
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Seguros" name="car[safe]" >
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Outros" name="car[others]" >
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Valor carro 1" name="car[totalCar]" >
          </div><br>
          <div class="classa">
            <select placeholder="Selecione" class="form-control" name=car[coinC] >
              <option style="display:none">Moeda:</option>
              <option>USD</option>
              <option>R$</option>
              <option>€</option>
            </select>
          </div><br>
        </div>
        <div class="rowclass" id="landing_car">
        </div>
        <button type="button" class="add_buttons" id="add_car">+Carro</button>
      </div>
    </div>
  <!-- Bloco carros - início -->

  <button type="submit" class="btn btn-primary" id="buttonPages" >Próximo</button>
</form>
<script type="text/javascript" src="/javascripts/replica.js">  </script>
<script type="text/javascript" src="/javascripts/operations.js">  </script>
<script type="text/javascript" src="/javascripts/formInputs.js">  </script>
