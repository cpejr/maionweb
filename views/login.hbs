
  <div class="login-box" id="login-box">
      <form action="/login" method="post">
      <h1> Login </h1>
      <br>
        <div class="textbox" id="login-text-email">
          <input type="email" class="input-placeholder" placeholder="email" name="user[email]">
        </div>
        <div class="textbox" id="login-text-password">
          <input type="password" class="input-placeholder" placeholder="password" name="user[password]">
        </div>
        <br>
        <input class="btn btn-login mt-2" type="submit" value="Login" id="login-btn">
      </form>
      <button class="btn btn-forgot mt-2" onclick="location.href='/forgot'">Esqueci minha senha</button>
  </div>


<script type='text/javascript' src='http://code.jquery.com/jquery-1.10.1.min.js'></script>

<script src="/javascripts/login.js"></script>
