<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<header class="login_page">
</header>
<form action="/registred/pageC/{{budget.client}}/{{budget._id}}" method="post" class="pagesFront">
  <div class="dinamic_spec">
      <h1>File</h1>
    <div class="form-group">
      <input type="text" name="budget[codFile]" placeholder="Código File" class="form-control" required="required" value="{{budget.codFile}}">
    </div>

    {{#each allScripts}}
    <div class="dinamic_spec_pagec">
      <h1>Roteiro:</h1>
        <div class="container rowclass">
          <div class="row rowclass marginPageC">
            <div class="col-sm-auto-pageC rowclass">
              Dia {{repNum}}
            </div>
            <div class="col-sm-auto-pageC rowclass">
              <label>Data</label>
              <input type="date" name="budget[planDate]" value="{{planDate}}" class="form-control classCinput2" placeholder="Data do dia" maxlength="10" >
            </div>
            <div class="col-sm-auto-pageC rowclass">
              <label>Cidade</label>
              <input placeholder="Cidade" name="budget[planCity]" value="{{planCity}}" class= "form-control classCinput2">
            </div>
            <div class="col-sm-auto-pageC rowclass">
              <label>País</label>
              <input placeholder="País" name="budget[planCountry]" value="{{planCountry}}" class="form-control classCinput2">
            </div>
          </div><br>
          <div class="form-group ">
            <label>Campo livre</label>
            <textarea class="form-control" name="budget[planFreeField]" placeholder="Campo Livre" rows="3">{{planFreeField}}</textarea>
          </div>
        </div>
        <br>
        <div class="rowclass">
          <label>Apagar?</label>
          <input type="radio" name="budget[deleting] type{{repNum}}" value="1" onclick="return confirm('Deseja mesmo excluir o dia {{repNum}} ?')">Sim</input>
          <input type="radio" name="budget[deleting] type{{repNum}}" value="0" checked>Não</input>
        </div>
    </div>
    {{/each}}
    <br><br>
    <div id="testedacamila" class="rowclass">
    </div>
    
    <button type="button" class="add_buttons" id="add_dias"> + Dias</button><br><br>

    <button type="submit" class="btn btn-primary" id="buttonPages" >Próximo</button>
  </div>
</form>

<div class="invDiv">
  <input value="{{dayToFunctions.day}}" id="get1">
</div>

<script type="text/javascript" src="/javascripts/replicaPageCRegistred.js">  </script>
<script type="text/javascript" src="/javascripts/formInputs.js">  </script>
