<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<header class="login_page">
</header>

<form action="/registred/pageD/{{client_id}}/{{budget_id}}" method="post" class="pagesFront">
  <div class="header Selected table-responsive" id=flight1>
    <table class="table table-striped table-hover" id="in_country_days1">
      {{#each allFlights}}
        {{#compare escala "0"}}
          <thead>
            <tr>
              <th colspan="4">Origem</th>
              <th colspan="4">Destino</th>
              <th colspan="4">Saída</th>
              <th colspan="4">Chegada</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th colspan="4"><input type="text" placeholder="Origem" name="flight[from]" class="form-control" value="{{from}}"></th>
              <th colspan="4"><input type="text" placeholder="Destino" name="flight[destination]" class="form-control" value="{{destination}}"></th>
              <th colspan="4"><input type="date" maxlength="15" placeholder="dd/mm/aa" name="flight[dateFrom]" class="form-control" value="{{escala}}"></th>
              <th colspan="4"><input type="date" maxlength="15" placeholder="dd/mm/aa" name="flight[dateDestination]" class="form-control" value="{{dateDestination}}"></th>
            </tr>
          </tbody>
          {{#compare final "1"}}
          <th colspan="16">
            <div class="rowclass">
              <div class="rowclass">
                <h3>Adulto:</h3>
                <input name="flight[tariffValueAdult]" type="text" id="adt1" onblur="calcularAdt()" placeholder="Tarifa" class="valor" value="{{tariffValueAdult}}">
                <i class="fa fa-money"></i>
                <input name="flight[taxValueAdult]" type="text" id="adt2" onblur="calcularAdt()" placeholder="Tx Embarque" class="valor" value="{{taxValueAdult}}">
                <i class="fa fa-money"></i>
                <input name="flight[ravValueAdult]" type="text" id="adt3" onblur="calcularAdt()" placeholder="Valor RAV" class="valor" value="{{ravValueAdult}}">
                <span>&#61;</span>
                <input name="flight[totalValueAdult]" type="text" id="adtResult1" onblur="calcularAdt()" placeholder="Total adt" class="valor" value="{{totalValueAdult}}">
                <span id="result"></span>
              </div>
              <br><br>
              <div class="rowclass">
                <h3>CHD  :</h3>
                <input name="flight[tariffValueCHD]" type="text" id="chd1" onblur="calcularChd()" placeholder="Tarifa" class="valor" value="{{tariffValueCHD}}">
                <i class="fa fa-money"></i>
                <input name="flight[taxValueCHD]" type="text" id="chd2" onblur="calcularChd()" placeholder="Tx Embarque" class="valor" value="{{taxValueCHD}}">
                <i class="fa fa-money"></i>
                <input name="flight[ravValueCHD]" type="text" id="chd3" onblur="calcularChd()" placeholder="Valor RAV" class="valor" value="{{ravValueCHD}}">
                <span>&#61;</span>
                <input name="flight[totalValueCHD]" type="text" id="chdResult1" onblur="calcularChd()" placeholder="Total chd" class="valor" value="{{totalValueCHD}}">
                <span id="result"></span>
              </div>
              <br><br>
              <div class="rowclass">
                <h3>INF   :</h3>
                <input name="flight[tariffValueInf]" type="text" id="inf1" onblur="calcularInf()" placeholder="Tarifa" class="valor" value="{{tariffValueInf}}">
                <i class="fa fa-money"></i>
                <input name="flight[taxValueInf]" type="text" id="inf2" onblur="calcularInf()" placeholder="Tx Embarque" class="valor" value="{{taxValueInf}}">
                <i class="fa fa-money"></i>
                <input name="flight[ravValueInf]" type="text" id="inf3" onblur="calcularInf()" placeholder="Valor RAV" class="valor" value="{{ravValueInf}}">
                <span>&#61;</span>
                <input name="flight[totalValueInf]" type="text" id="infResult1" onblur="calcularInf()" placeholder="Total inf" class="valor" value="{{totalValueInf}}">
                <span id="result"></span>
              </div>
              <br><br>
              <div class="rowclass">
              <i class="fa fa-group" style="font-size:20px;color:grey"></i>
              <input name="flight[finalValueInf]" type="text" id="totalResult1" onblur="total()" placeholder="Total" class="valor"/>
              </div>
              <br>
            </div>
          </th>
          {{/compare}}

          {{else}}

          <tbody>
            <tr>
              <th colspan="4"><input type="text" placeholder="Origem" name="flight[from]" class="form-control" value="{{from}}"></th>
              <th colspan="4"><input type="text" placeholder="Destino" name="flight[destination]" class="form-control" value="{{destination}}"></th>
              <th colspan="4"><input type="date" maxlength="15" placeholder="dd/mm/aa" name="flight[dateFrom]" class="form-control" value="{{escala}}"></th>
              <th colspan="4"><input type="date" maxlength="15" placeholder="dd/mm/aa" name="flight[dateDestination]" class="form-control" value="{{dateDestination}}"></th>
            </tr>
          </tbody>
          {{#compare final "1"}}
          <th colspan="16">
            <div class="rowclass">
              <div class="rowclass">
                <h3>Adulto:</h3>
                <input name="flight[tariffValueAdult]" type="text" id="adt1" onblur="calcularAdt()" placeholder="Tarifa" class="valor" value="{{tariffValueAdult}}">
                <i class="fa fa-money"></i>
                <input name="flight[taxValueAdult]" type="text" id="adt2" onblur="calcularAdt()" placeholder="Tx Embarque" class="valor" value="{{taxValueAdult}}">
                <i class="fa fa-money"></i>
                <input name="flight[ravValueAdult]" type="text" id="adt3" onblur="calcularAdt()" placeholder="Valor RAV" class="valor" value="{{ravValueAdult}}">
                <span>&#61;</span>
                <input name="flight[totalValueAdult]" type="text" id="adtResult1" onblur="calcularAdt()" placeholder="Total adt" class="valor" value="{{totalValueAdult}}">
                <span id="result"></span>
              </div>
              <br><br>
              <div class="rowclass">
                <h3>CHD  :</h3>
                <input name="flight[tariffValueCHD]" type="text" id="chd1" onblur="calcularChd()" placeholder="Tarifa" class="valor" value="{{tariffValueCHD}}">
                <i class="fa fa-money"></i>
                <input name="flight[taxValueCHD]" type="text" id="chd2" onblur="calcularChd()" placeholder="Tx Embarque" class="valor" value="{{taxValueCHD}}">
                <i class="fa fa-money"></i>
                <input name="flight[ravValueCHD]" type="text" id="chd3" onblur="calcularChd()" placeholder="Valor RAV" class="valor" value="{{ravValueCHD}}">
                <span>&#61;</span>
                <input name="flight[totalValueCHD]" type="text" id="chdResult1" onblur="calcularChd()" placeholder="Total chd" class="valor" value="{{totalValueCHD}}">
                <span id="result"></span>
              </div>
              <br><br>
              <div class="rowclass">
                <h3>INF   :</h3>
                <input name="flight[tariffValueInf]" type="text" id="inf1" onblur="calcularInf()" placeholder="Tarifa" class="valor" value="{{tariffValueInf}}">
                <i class="fa fa-money"></i>
                <input name="flight[taxValueInf]" type="text" id="inf2" onblur="calcularInf()" placeholder="Tx Embarque" class="valor" value="{{taxValueInf}}">
                <i class="fa fa-money"></i>
                <input name="flight[ravValueInf]" type="text" id="inf3" onblur="calcularInf()" placeholder="Valor RAV" class="valor" value="{{ravValueInf}}">
                <span>&#61;</span>
                <input name="flight[totalValueInf]" type="text" id="infResult1" onblur="calcularInf()" placeholder="Total inf" class="valor" value="{{totalValueInf}}">
                <span id="result"></span>
              </div>
              <br><br>
              <div class="rowclass">
              <i class="fa fa-group" style="font-size:20px;color:grey"></i>
              <input name="flight[finalValueInf]" type="text" id="totalResult1" onblur="total()" placeholder="Total" class="valor"/>
              </div>
              <br>
            </div>
          </th>
          {{/compare}}
        {{/compare}}
      {{/each}}
    </table>
  </div>
  <br><br>
  <div class="dinamic_spec">
    <h1> Aéreo </h1>
    <title>Voo</title>

    <div class="no_padding" id="button_space">
    </div>

    <br><br>
      <div class="header">
        <div class="row">
          <div class="col-sm-6">
            <h3> Passageiros </h3>
            <br><br>
            <input class="date start-date" placeholder="Responsável" value="{{client.fullname}}" readonly="readonly">
            <br><br>
            {{#each test0}}
              <li>{{name}} <div class="form-check">
                <input type="checkbox" class="form-check-input">
                <label class="form-check-label" for="exampleCheck1">Voo 1</label>
                </div></li>
            {{/each}}
            <br><br>
          </div>
          <div class="col-sm-6">
            <button type="button" name="button" id="button_day_original" class="add_buttons"> +Escalas </button>
            <button type="button" name="button" id="add_country" class="add_buttons"> +Voos </button>
            <button type="button" name="button" id="increasing" class="move add_buttons"> Voo Anterior</button>
            <button type="button" name="button" id="decreasing" class="move add_buttons"> Próximo voo </button>
          </div>
        </div>
      </div>
      <br><br><br>
    </div>
    <button type="submit" class="btn btn-primary" id="buttonPages" >Próximo</button>
</form>
