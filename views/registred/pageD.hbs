<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<header class="login_page">
</header>

<form action="/registred/pageD/{{client_id}}/{{budget_id}}" method="post" class="pagesFront">
  <h1> Aéreo </h1>
  {{#each allFlights}}

    {{#compare inicio "1"}}
      <div class="dinamic_spec">
        <h1>Voo</h1>
        <div class="header Selected table-responsive">
          <table class="table table-striped table-hover" id="in_country_days{{idTable}}">
            <thead>
              <tr>
                <th colspan="1">Voo</th>
                <th colspan="1">Data</th>
                <th colspan="4">De</th>
                <th colspan="4">Para</th>
                <th colspan="2">Saída</th>
                <th colspan="2">Chegada</th>
              </tr>
            </thead>
    {{/compare}}

      <tr>
        <th colspan="1"><input type="text" placeholder="Num voo" name="flight[flightNum]" value="{{flightNum}}" class="form-control"/></th>
        <th colspan="1"><input type="text" placeholder="dd/mm/aaaa" name="flight[dateFrom]" value="{{dateFrom}}" class="form-control"/></th>
        <th colspan="4"><input type="text" placeholder="De" name="flight[from]" value="{{from}}" class="form-control"/></th>
        <th colspan="4"><input type="text" placeholder="Para" name="flight[destination]" value="{{destination}}" class="form-control"/></th>
        <th colspan="2"><input type="text" placeholder="00:00" name="flight[timeOut]" value="{{timeOut}}" class="form-control"/></th>
        <th colspan="2"><input type="text" placeholder="00:00" name="flight[timeIn]" value="{{timeIn}}" class="form-control"/></th>
      </tr>

      {{#compare final "1"}}
          </table>
        </div>
      </div>
      {{/compare}}

  {{/each}}
  <div class="dinamic_spec">
    <div class="no_padding" id="button_space">
    </div>
    <div class="header">
        <div class="row">
          <div class="col-sm-6">
            <h3> Passageiros </h3>
            <br><br>
            <input class="date start-date" placeholder="Responsável" value="{{client.fullname}}" readonly="readonly">
            <br><br>
            {{#each test0}}
              <li>{{name}} <div class="form-check">
                <input type="checkbox" class="form-check-input">
                <label class="form-check-label" for="exampleCheck1">Voo 1</label>
                </div></li>
            {{/each}}
            <br><br>
          </div>
          <div class="col-sm-6">
            <button type="button" name="button" id="button_day_original" class="add_buttons"> +Escalas </button>
            <button type="button" name="button" id="add_country" class="add_buttons"> +Voos </button>
            <button type="button" name="button" id="increasing" class="move add_buttons"> Voo Anterior</button>
            <button type="button" name="button" id="decreasing" class="move add_buttons"> Próximo voo </button>
          </div>
        </div>
      </div>
    <br><br><br>
  </div>
  <button type="submit" class="btn btn-primary" id="buttonPages" >Próximo</button>
</form>
<script type="text/javascript" src="/javascripts/replica.js">  </script>
<script type="text/javascript" src="/javascripts/operations.js">  </script>
