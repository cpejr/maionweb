<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<header class="login_page">
</header>
<form action="/registred/pageF/{{client_id}}/{{budget_id}}" method="post" class="pagesFront">

  <div class="dinamic_spec">
      <h1> Traslado/carro </h1>
    {{#each allCarsTraslado}}
    <div class="row rowclass">
      <!-- coluna 1 -->
      <div class="col-sm-6 rowclass" id="PageF_Col1">
        <div class="boxLeftPageF">
          <br><br><br>  <h3> Passageiros </h3><br>
          <input class="form-check-input" type="checkbox">
          <input placeholder="Responsável" value="{{client.fullname}}" readonly="readonly">
          <br><br>
          <div id="add_acompanhantesvoo"></div>
          <br>
        </div>
      </div>

      <!-- coluna 2 -->
      <div class="col-sm-6 rowclass">
        <div class="boxRightPageF">
          <div>
            <h3> Traslado 1</h3><br>
            <input name="car[from]" type="text" placeholder="De" class="date start-date" value="{{from}}"/>
            <i class="fa fa-car" aria-hidden="true"></i>
            <input name="car[to]" type="text" placeholder="Para" class="date start-date" value="{{to}}"/>
            <br><br>
            <input name="car[dateFrom]" type="date" placeholder="dd/mm/aa" class="date start-date" value="{{dateFrom}}"/>
            <i class="fa fa-calendar"></i>
            <input name="car[timeFrom]" type="text" placeholder="Horário" class="date start-date" value="{{timeFrom}}"/>
            <br><br>
          </div>
          <h3>Informações</h3><br>
          <div class="container rowclass classF-input">
            <div class="row rowclass">
              <div class="col-sm rowclass">
                <div class="classa rowclass col-lg-11">
                  <input name="car[valueADT]" class="form-control" placeholder="Val ADT" value="{{valueADT}}">
                </div>
              </div>
              <div class="col-sm rowclass">
                <div class="classa rowclass col-lg-11">
                  <input name="car[valueCHD]" class="form-control" placeholder="Val CHD" value="{{valueCHD}}">
                </div>
              </div>
              <div class="col-sm rowclass">
                <div class="classa rowclass col-lg-11">
                  <input name="car[valueINF]" class="form-control" placeholder="Val INF" value="{{valueINF}}">
                </div><br>
              </div>
              <div class="col-sm rowclass">
                <input name="car[totalTranslado]" class="form-control" placeholder="Val Total" value="{{totalTranslado}}">
              </div>
            </div>
          </div>
        </div>
        <div class="rowclass" id="PageF_Col2"></div>
     </div>
    </div>
    {{/each}}

    <button type="button" class="add_buttons" id="add_translado">+Traslado</button>
  <!-- coluna 3 -->
    <div class="col-sm-auto ">
      {{#each allCars}}
        <div class="boxCarsPageF">
          <br><br><h3> Carros 1 </h3><br>
          <div class="classa">
            <input class="form-control" placeholder="Categoria" name="car[typeCar]" value="{{typeCar}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Cidade de Retirada" name="car[withdrawal]" value="{{withdrawal}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Cidade de Devolução" name="car[delivery]" value="{{delivery}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Valor carro 1" name="car[totalCar]" value="{{totalCar}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Cidade" name="car[city]" value="{{city}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Transmissão" name="car[shift]" value="{{shift}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Seguros" name="car[safe]" value="{{safe}}">
          </div><br>
          <div class="classa">
            <input class="form-control" placeholder="Outros" name="car[others]" value="{{others}}">
          </div><br>
        </div>
      {{/each}}
    <div class="rowclass" id="PageF_Col3"></div>
    <button type="button" class="add_buttons" id="add_car">+Carro</button>
  </div>
  </div>
  <button type="submit" class="btn btn-primary" id="buttonPages" >Próximo</button>
</form>
<script type="text/javascript" src="/javascripts/replica.js">  </script>
